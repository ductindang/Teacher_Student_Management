@model BLL.DTOs.User

@{
    ViewData["Title"] = "Admin - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN LOADER -->
<div id="load_screen">
    <div class="loader">
        <div class="loader-content">
            <div class="spinner-grow align-self-center"></div>
        </div>
    </div>
</div>
<!--  END LOADER -->


<div class="auth-container d-flex">

    <div class="container mx-auto align-self-center">

        <div class="row">

            <div class="col-6 d-lg-flex d-none h-100 my-auto top-0 start-0 text-center justify-content-center flex-column">
                <div class="auth-cover-bg-image"></div>
                <div class="auth-overlay"></div>

                <div class="auth-cover">

                    <div class="position-relative">

                        <img src="/images/auth-cover.svg" alt="auth-img">

                        <h2 class="mt-5 text-white font-weight-bolder px-2">Welcome to the community of expert developers</h2>
                        <p class="text-white px-2">It is easy to setup with great customer experience. Start using application</p>
                    </div>

                </div>

            </div>

            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-8 col-12 d-flex flex-column align-self-center ms-lg-auto me-lg-0 mx-auto">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12 mb-3">

                                <h2>Sign In</h2>
                                <p>Enter your email and password to login</p>

                            </div>
                            <form asp-action="SignIn" id="signin-form">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label" for="email">Email</label>
                                        <input id="email" asp-for="Email" class="form-control" placeholder="Enter your email" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-4">
                                        <label class="form-label" for="password">Password</label>
                                        <input id="password" type="password" asp-for="PasswordHash" class="form-control" placeholder="Enter your password" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-3">
                                        <div class="form-check form-check-primary form-check-inline">
                                            <input class="form-check-input me-3" type="checkbox" id="form-check-default">
                                            <label class="form-check-label" for="form-check-default">
                                                Remember me
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="mb-4">
                                        <button type="submit" class="btn btn-secondary w-100">SIGN IN</button>
                                    </div>
                                </div>
                            </form>

                            <div class="col-12">
                                <div class="text-center">
                                    <p class="mb-0">Dont't have an account ? <a class="text-warning" asp-controller="User" asp-action="SignUp">Sign Up</a></p>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


<!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/user/signIn.js"></script>
<!-- END GLOBAL MANDATORY SCRIPTS -->
