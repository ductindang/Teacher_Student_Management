@using BLL.DTOs
@using BLL.DTOs.Enum
@{
    ViewData["Title"] = "Chỉnh sửa khóa học";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}

@model Course

<div>
    <!-- BREADCRUMB -->
    <div class="page-meta">
        <nav class="breadcrumb-style-one" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Khóa học</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="@Url.Action("Index", "Course")">Quản lý khóa học</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa khóa học</li>
            </ol>
        </nav>
    </div>
    <!-- /BREADCRUMB -->

    <div class="layout-top-spacing col-12">
        <a href="@Url.Action("Index", "Course")" class="btn">
            Trở lại
        </a>
    </div>

    <div class="row layout-top-spacing">
        <div id="user-management" class="col-lg-12 layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Chỉnh sửa</h4>
                        </div>
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <div class="col-12">
                        <form asp-action="Edit" method="POST" id="general-settings">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="name">Tên khóa học <strong class="text-danger">*</strong></label>
                                        <input asp-for="Name"
                                               type="text"
                                               id="name"
                                               class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Tên khóa học">
                                        <span asp-validation-for="Name" class="invalid-feedback" role="alert"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label for="Duration">Thời gian khóa học (tháng) <strong class="text-danger">*</strong></label>
                                        <input asp-for="Duration"
                                               type="number"
                                               min="1"
                                               id="duration"
                                               class="form-control @(ViewData.ModelState["Duration"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                               placeholder="Nhập thời gian học (đơn vị tháng)">
                                        <span asp-validation-for="Duration" class="invalid-feedback"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group mb-4">
                                    <label asp-for="Price">
                                        Học phí <strong class="text-danger">*</strong>
                                    </label>
                                    <input asp-for="Price"
                                           type="number"
                                           step="0.1"
                                           min="0"
                                           class="form-control @(ViewData.ModelState["Price"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                           placeholder="Học phí cho khóa học" />
                                    <span asp-validation-for="Price" class="invalid-feedback"></span>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="Status">
                                            Trạng thái <strong class="text-danger">*</strong>
                                        </label>

                                        <select asp-for="Status"
                                                class="form-control"
                                                asp-items="Html.GetEnumSelectList<CourseStatus>()">
                                        </select>

                                        <span asp-validation-for="Status" class="invalid-feedback"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group mb-4">
                                <label for="description">Mô tả khóa học <strong class="text-danger">*</strong></label>
                                <input asp-for="Description"
                                       type="text"
                                       id="description"
                                       class="form-control @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Mô tả khóa học">
                                <span asp-validation-for="Description" class="invalid-feedback" role="alert"></span>
                            </div>


                            <button type="submit" class="btn btn-primary">Hoàn tất</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>